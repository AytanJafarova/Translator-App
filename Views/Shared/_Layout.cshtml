    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.dataTables.min.css">

    <!-- DataTables Responsive JS -->
    <script type="text/javascript" src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.7/datatables.min.css" rel="stylesheet">
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.7/datatables.min.js"></script>

    <script>
      $(document).ready(function() {
       $('#tableWord').DataTable({
           "language": {
             
               "lengthMenu": "Göstərilir _MENU_ söz",
               "search":"Axtar",
                       "emptyTable":     "Cədvəldə məlumat yoxdur!",
                       "info":           "_TOTAL_ nəticədən _START_-dən _END_-a qədər göstərilir ",
                       "zeroRecords": "Uyğun nəticə yoxdur!",
                       "infoEmpty": "Məlumat tapılmadı!",
                       "infoFiltered": "( _MAX_ nəticədən seçilmişdir)",
                       "paginate": {
                           "first":      "First",
                           "last":       "Last",
                           "next":       "Sonrakı",
                           "previous":   "Əvvəlki" }
               }
           });
       });
       </script>
       <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

</head>
<body onload="loadFunction()"> 
    <div id="loading"></div>
    @RenderBody()
 

    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
       var loader = document.getElementById('loading');
       function loadFunction(){
            loader.style.display = 'none';
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
